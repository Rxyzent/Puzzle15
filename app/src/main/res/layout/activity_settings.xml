<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/setting_back"
    tools:context=".SettingsActivity"
    android:background="@drawable/game_backgraund">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/day_night"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center|top"
        app:lottie_rawRes="@raw/day_night"
        app:lottie_repeatMode="reverse"
        app:lottie_repeatCount="0"
        app:lottie_autoPlay="false"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="150dp"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/auto_btn"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:text="auto"
            style="@style/Gloria_font"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:background="@drawable/empty_button_backgraund"/>
        <RadioButton
            android:id="@+id/day_btn"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:text="day"
            style="@style/Gloria_font"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:background="@drawable/empty_button_backgraund"/>
        <RadioButton
            android:id="@+id/night_btn"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:text="night"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            style="@style/Gloria_font"
            android:background="@drawable/empty_button_backgraund"/>


    </LinearLayout>
</FrameLayout>